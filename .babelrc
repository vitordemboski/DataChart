{
  "presets": ["module:metro-react-native-babel-preset"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./src"],
        "alias": {
          "~": "./",
          "@": "./src",
          "@components": "./src/components",
          "@modules": "./src/modules",
          "@assets": "./src/assets"
        }
      }
    ]
  ]
}
